-->exercice 9 
def get_alphabet():
    alphabet = ""
    for code in range(97, 123):
        alphabet += chr(code)
    return alphabet

def is_pangram(sentence):
    alphabet = get_alphabet()
    for letter in alphabet:
        if letter not in sentence.lower():
            return False
    return True

par exemple 
sentence = "Voyez ce koala fou qui mange des journaux et des photos dans un bungalow"
print(is_pangram(sentence))  # Output: True

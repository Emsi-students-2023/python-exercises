-->exercice 18
def convert_base(number, from_base, to_base):
    try:
        decimal_number = int(number, from_base)
        if to_base < 2 or to_base > 16:
            raise ValueError("La base de conversion doit être comprise entre 2 et 16.")
        converted_number = format(decimal_number, f"0{to_base}X")
        return converted_number
    except ValueError as e:
        print(f"Erreur : {e}")
        exit(1)

def main():
    number = input("Entrez le nombre à convertir : ")
    from_base = int(input("Entrez la base du nombre d'entrée : "))
    to_base = int(input("Entrez la base de conversion : "))

    converted_number = convert_base(number, from_base, to_base)
    print("Résultat :", converted_number)

if __name__ == "__main__":
    main()

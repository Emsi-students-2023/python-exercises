class Boule:
    def __init__(self,gout):
        self.gout=gout
    def afficher(self):
        return self.gout    
def creerBoules(liste):
        list=[]
        for l in liste:
            list.append(Boule(l))
        return list 
def affboules(li):
    boules=creerBoules(li)
    for b in boules:
            print(b)

class Bol:
    def __init__(self):
        self.liste=[]
    def ajouterBoules(self,*boules):
        self.liste.append(boules)
s1 = Boule('chocolat')
s2 = Boule('fraise')
b = Bol()
b.ajouterBoules(s1,s2)
print(b)

